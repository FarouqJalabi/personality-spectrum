<section class="inline_blog_post">
    <img class="blog_image" src="<%=  blog_post.image_src %>" alt="<%=  blog_post.image_alt %>" />

    <h2>
        <%=  blog_post.title %>
    </h2>
  <div class="blog_image_text">
    <div class="blog_text_container">
      <p><%=  blog_post.time_to_read %> min read</p>
    </div>
    <div class="blog_text_container">
      <p><%=  blog_post.created_at.strftime('%b %d, %Y') %></p>
    </div>
  </div>


</section>