<main class="blog_post">
    <h1 class="blog_title">
        <%= @blog_post.title %>
    </h1>

    <div class="blog_image_container">
        <div>
            <img class="blog_image" src="https://bigfive-test.com/blog/bad_communication.webp"/>

            <div class="blog_image_text">
                <div class="blog_text_container">
                    <p>4 min read</p>
                </div>
                <div class="blog_text_container">
                    <p><%= @blog_post.created_at.strftime('%b %d, %Y') %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Allows links, br and safe html tags -->
    <%= simple_format("Hello world <br> hello <a href='https://youtube.com' target='_blank'>hello</a>", {}, { sanitize_options: { attributes: %w[target href] } }) %>

</main>