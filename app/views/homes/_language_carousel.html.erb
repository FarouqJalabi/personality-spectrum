<section class="text-center relative">
    <div class="section-divider"></div>

    <div class="py-10">
        <h2 class="m-auto text-center mb-12 text-5xl font-bold">
            <%= t("footer.translations") %>!
        </h2>
        <ol class="gap-6 flex align-center justify-left min-w-screen absolute ">
            <% @languages.each do |key, value| %>
            <li class="flex shadow w-64 items-center m-2 p-2">
              <p>Take autism test on English!</p>
              <%= image_tag key, alt: "flag icon", class: "w-12 aspect-square" %>
            </li>
            <% end %>
        </ol>
    </div>

    <div class="section-divider mt-24"></div>
</section>