<head>
</head>
<body>
    <main>
        <section>
            <div class="text_container">
                <h1><%= t('home.title') %></h1>
            </div>
            <div class="text_container">
                <p><%= t('home.description') %></p>
            </div>


            <div class="button_container">
                <%= link_to "Start test", test_path(1) %>
