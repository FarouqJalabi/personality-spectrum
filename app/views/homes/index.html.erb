
    <main class="px-16 md:px-64 md:grid md:gap-32">
        <section id="hero" class="my-4 grid grid-cols-1 items-center justify-center gap-10 md:px-32">
            <div class="flex items-center justify-center">
                <h1 class="text-4xl w-100  md:text-6xl"><%= t('home.title') %></h1>
            </div>
            <div class="flex items-center justify-center">
                <p class="text-lg text-secondary-black w-90 md:text-3xl"><%= t('home.description') %></p>
            </div>


            <div class="flex items-center justify-center gap-12">
                <%= link_to "Start test", test_path(1), class: "duration-100 hover:scale-110 bg-primary text-white px-4 py-2 rounded-lg shadow-md md:text-2xl" %>
                <%= link_to "About the test", "#aboutTest", class: "duration-100 hover:scale-110 bg-whitesmoke text-gray-700 px-4 py-2 rounded-lg shadow-md md:text-2xl" %>
            </div>

        </section>

