        <section id="aboutTest" class="about">
            <h2><%= t('home.aboutTest.title') %></h2>
            <p><%= t('home.aboutTest.description1') %></p>
            <p><%= t('home.aboutTest.description2') %></p>
        </section>

      <%= render @blog_posts %>
    </main>
</body>
</html>