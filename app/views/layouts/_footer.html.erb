<footer class="pt-32 grid items-center justify-center pb-20">
    <div class="py-[1.4rem] flex items-center justify-center gap-5 w-screen">
        <div class="flex items-center justify-start flex-[0.25]">        
            <%= image_tag "Logo.svg", alt: "logo", class: "w-fit h-fit"%>
        </div>
        <div  class="grid items-center justify-end flex-[0.3] md:gap-3">
            <h2 class="text-xl font-bold md:text-2xl lg:text-3xl">
                <%= t('footer.resources') %>
            </h2>
            <div class="flex items-center justify-end gap-2 md:gap-5">
              <a href="https://www.wired.com/2001/12/aqtest/" target="_blank">
                <%= image_tag "wired.svg", alt: "wired logo", class: "w-fit h-fit"%>
              </a>
            </div>
        </div>
    </div>
    <div class="py-[1.4rem] flex items-center justify-center gap-[.8rem]">
        <a href="<%= static_pages_privacy_policy_path %>"><%= t('footer.privacy') %></a>
        <a href="<%= static_pages_translations_path %>"><%= t('footer.translations') %></a>
      <a href="<%= static_pages_faq_path %>">FAQ</a>
    </div>
    <div class="py-[1.4rem] flex items-center justify-center">
        <p class="text-xs md:text-sm"><%= t('footer.holding') %></p>
    </div>
</footer>