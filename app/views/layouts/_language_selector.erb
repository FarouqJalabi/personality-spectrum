<select class="border border-gray-300 md:text-xl p-2 pr-8 bg-white rounded" name="" aria-label="Language selector" onchange="window.location.href=this.value">
  <% I18n.available_locales.each do |lang| %>
    <option <%=  "selected" if I18n.locale == lang %> value="<%= url_for(params.permit(:score).merge(locale: lang)) %>"><%= t("language_name", locale:lang) %> <%= t("flag_emoji", locale: lang) %></option>
  <% end %>
</select>