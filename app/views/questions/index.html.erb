<%= form_with url: questions_calculate_answer_path, method: :post do |form| %>
  <% @questions.each_with_index do |question, index| %>
    <%= render partial: 'question', locals: { question: question, form: form, is_first_question: index == 0, index: index, questions_length: @questions.length } %>
  <% end %>
<% end %>
