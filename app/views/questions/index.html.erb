<h1>Questions</h1>



<%= form_with url: questions_calculate_answer_path, method: :post do |form| %>
  <% @questions.each_with_index do |question, index| %>
    <h3><%= question[:content] %></h3>
    <% (1..5).each do |option| %>
      <%= form.radio_button("answers[#{index}]", option) %>
      <%= form.label("answers[#{index}][#{option}]", option) %><br>
    <% end %>
    <br>
  <% end %>
  <%= form.submit "Submit Answers" %>
<% end %>
