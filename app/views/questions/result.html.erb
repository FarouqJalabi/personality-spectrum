<% if params.present? %>
  <div class="container">
    <div class="content">
      <div class="box">
      
          <% params.each do |key, value| %>
            <% if key.include?("category") %>
      
      
              <section>
                <strong><%= key %></strong>
                <%= value %>%
                <div class="percentage_bar">
                  <div style="width: <%= value %>%;"></div>
                </div>
      
              </section>
      
            <% end %>
          <% end %>
      

      </div>
    </div>
  </div>

<% else %>
  <h1>ERROR</h1>
<%end  %>
