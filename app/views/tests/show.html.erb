<div class="progress-bar-container">
  <div class="progress-bar">
    <div class="progress-bar-fill" style="width: 0%;"></div>
  </div>
</div>

<%= form_with url: questions_calculate_answer_path, method: :post do |form| %>
  <% @questions.each_with_index do |question, index| %>
    <%= render partial: 'questions/question', locals: { question: question, form: form, index: index, } %>
  <% end %>
<% end %>
